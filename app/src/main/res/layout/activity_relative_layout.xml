<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >

    <Button
        android:id="@+id/redButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/redButton"/>

    <Button
        android:id="@+id/greenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#008000"
        android:layout_gravity="center"
        android:text="@string/greenButton"
        android:layout_below="@id/redButton"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/middleTextView"
        android:text="@string/middleText"
        android:layout_below="@id/greenButton"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/leftTextView"
        android:layout_below="@id/greenButton"
        android:layout_toLeftOf="@id/middleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is #1"
        android:paddingRight="15dp"/>

    <TextView
        android:id="@+id/rightTextView"
        android:layout_below="@id/greenButton"
        android:layout_toRightOf="@id/middleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is #1"
        android:paddingLeft="15dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blueButton"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0000FF"
        android:text="Person #3"
        android:layout_below="@id/rightTextView"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
